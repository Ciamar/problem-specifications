{
  "exercise": "matrix",
  "version": "1.0.0",
  "cases": [
    {
      "description": "one number matrix",
      "property": "rows",
      "input": {
        "string": "1",
        "index": 0
      },
      "expected": [1]
    },
    {
      "description": "can extract row",
      "property": "rows",
      "input": {
        "string": "1 2\n3 4",
        "index": 1
      },
      "expected": [3,4]
    },
    {
      "description": "numbers of different length",
      "property": "rows",
      "input": {
        "string": "1 2\n10 20",
        "index": 1
      },
      "expected": [10,20]
    },
    {
      "description": "can extract column",
      "property": "columns",
      "input": {
        "string": "1 2 3\n4 5 6\n7 8 9",
        "index": 2
      },
      "expected": [3, 6, 9]

    },
    {
      "description": "can extract column from non-square matrix",
      "property": "columns",
      "input": {
        "string": "1 2 3\n4 5 6\n7 8 9\n8 7 6",
        "index": 2
      },
      "expected": [3, 6, 9, 6]
    }
    ]
}
